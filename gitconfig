[merge]
	defaultToUpstream = true
	tool = gvimdiff
[diff]
	mnemonicprefix = true
[rerere]
	enabled = true
[branch]
	autosetuprebase = remote
[color]
	diff = auto
	status = auto
[log]
	decorate = short
[push]
	default = tracking
[alias]
        ff = merge --ff-only
        nff = merge --no-ff
        f = fetch --all
        fff = !git f && git ff
